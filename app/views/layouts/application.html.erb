<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
        <%= yield(:title) %>
      <% else %>
        Ticketee
      <% end %>
    </title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% flash.each do |key, value| %>
      <div class='flash' id='<%= key %>'>
        <%= value %>
      </div>
    <% end %>
    <nav>
      <ul>
        <% if current_user%>
          <li>Signed in as
            <% unless current_user.name %>
               <%= current_user.twitter_screen_name %>
            <% else %>
               <%= current_user.name %>
            <%end%>  
          </li>
          <% admins_only do%>
            <li><%= link_to "Admin", admin_root_path %></li>
          <% end%>
          <li><%= link_to "Logout", logout_path %></li>
        <% else%>
          <li><%= link_to "Sign up", new_user_path %></li>
          <li><%= link_to "Sign in", signin_path %></li>
          <li><%= link_to "Logout", logout_path %></li>
          <br>
          Or use 
          <%= auth_provider(:twitter) %> <%= auth_provider(:github) %>
          <%#<li><%= link_to "Sign In with twitter",user_omniauth_authorize_path(:twitter)%></li>
          <%#<li><%= link_to "Sign in with Github", user_omniauth_authorize_path(:github)%></li>
        <% end%>
        </ul>
    </nav>
    <%= yield %>
  </body>
</html>
